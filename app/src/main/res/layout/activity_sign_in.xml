<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activities.SignInActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <ImageButton
            android:id="@+id/naverSignInButton"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/naver_sign_in_desc"
            android:scaleType="fitCenter"
            android:src="@drawable/naver_login_button"
            app:layout_constraintBottom_toTopOf="@id/kakaoSignInButton"
            app:layout_constraintDimensionRatio="366:90"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/kakaoSignInButton"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/kakao_sign_in_desc"
            android:scaleType="fitCenter"
            android:src="@drawable/kakao_login_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="366:90"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>