<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/certificateImageView"
            android:layout_width="120dp"
            android:layout_height="75dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="0"
            android:background="@drawable/round_image_view"
            android:contentDescription="@string/certificate_image_view" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/certificateNameTextView"
                style="@style/default_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/certificate_name_example" />

            <TextView
                android:id="@+id/certificateOrgTextView"
                style="@style/small_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/certificate_org_example" />

            <TextView
                android:id="@+id/certificateDateTextView"
                style="@style/small_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/certificate_date_example" />
        </LinearLayout>
    </LinearLayout>
</layout>