<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/reviewImageView"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:contentDescription="@string/profile_image_desc"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_account_huge"
            app:layout_constraintBottom_toTopOf="@id/reviewServiceSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/reviewNicknameTextView"
            style="@style/TextStyle.Subtitle1.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nickname_example"
            app:layout_constraintBottom_toTopOf="@id/reviewDateTextView"
            app:layout_constraintStart_toEndOf="@id/reviewImageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/reviewDateTextView"
            style="@style/TextStyle.Body2.Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/review_date_example"
            app:layout_constraintBottom_toTopOf="@id/reviewServiceSubtitle"
            app:layout_constraintStart_toEndOf="@id/reviewImageView"
            app:layout_constraintTop_toBottomOf="@id/reviewNicknameTextView" />

        <TextView
            android:id="@+id/reviewServiceSubtitle"
            style="@style/TextStyle.Body2.Default"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/review_service"
            app:layout_constraintBottom_toBottomOf="@id/reviewServiceTextView"
            app:layout_constraintEnd_toStartOf="@id/reviewServiceTextView"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/reviewServiceTextView" />

        <TextView
            android:id="@+id/reviewServiceTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/review_service_example"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toEndOf="@id/reviewServiceSubtitle"
            app:layout_constraintTop_toBottomOf="@id/reviewImageView" />

        <TextView
            android:id="@+id/reviewReservationSubtitle"
            style="@style/TextStyle.Body2.Default"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/review_reservation"
            app:layout_constraintBottom_toBottomOf="@id/reviewReservationTextView"
            app:layout_constraintEnd_toStartOf="@id/reviewReservationTextView"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/reviewReservationTextView" />

        <TextView
            android:id="@+id/reviewReservationTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/review_reservation_example"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toEndOf="@id/reviewReservationSubtitle"
            app:layout_constraintTop_toBottomOf="@id/reviewServiceTextView" />

        <TextView
            android:id="@+id/reviewFeeSubtitle"
            style="@style/TextStyle.Body2.Default"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/review_fee"
            app:layout_constraintBottom_toBottomOf="@id/reviewFeeTextView"
            app:layout_constraintEnd_toStartOf="@id/reviewFeeTextView"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/reviewFeeTextView" />

        <TextView
            android:id="@+id/reviewFeeTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/review_fee_example"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toEndOf="@id/reviewFeeSubtitle"
            app:layout_constraintTop_toBottomOf="@id/reviewReservationTextView" />

        <TextView
            android:id="@+id/reviewTextTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/review_text_example"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintTop_toBottomOf="@id/reviewFeeSubtitle" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="ifContentScrolls"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/reviewTextTextView">

            <LinearLayout
                android:id="@+id/reviewImageField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/reviewFirstImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/review_image_desc"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dog_example" />

                <ImageView
                    android:id="@+id/reviewSecondImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/review_image_desc"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dog_example" />

                <ImageView
                    android:id="@+id/reviewThirdImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/review_image_desc"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dog_example" />
            </LinearLayout>
        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>