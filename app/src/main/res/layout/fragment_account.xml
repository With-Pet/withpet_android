<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/accountToolbar"
            style="@style/toolbar_style"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/account_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/accountToolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:context=".ui.fragments.AccountFragment">

                <LinearLayout
                    android:id="@+id/myProfileMenu"
                    style="@style/account_linear_layout_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="@style/account_icon_style"
                        android:layout_weight="0"
                        android:contentDescription="@string/my_profile_menu_icon"
                        android:src="@drawable/ic_person" />

                    <TextView
                        style="@style/account_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/my_profile_menu" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/petProfileMenu"
                    style="@style/account_linear_layout_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="@style/account_icon_style"
                        android:layout_weight="0"
                        android:contentDescription="@string/pet_profile_menu_icon"
                        android:src="@drawable/ic_pet_profile" />

                    <TextView
                        style="@style/account_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/pet_profile_menu" />
                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    style="@style/divider_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/likePersonMenu"
                    style="@style/account_linear_layout_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="@style/account_icon_style"
                        android:layout_weight="0"
                        android:contentDescription="@string/like_person_menu_icon"
                        android:src="@drawable/ic_star" />

                    <TextView
                        style="@style/account_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/like_person_menu" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/likePetMenu"
                    style="@style/account_linear_layout_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="@style/account_icon_style"
                        android:layout_weight="0"
                        android:contentDescription="@string/like_pet_menu_icon"
                        android:src="@drawable/ic_like" />

                    <TextView
                        style="@style/account_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/like_pet_menu" />
                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    style="@style/divider_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/noticeMenu"
                    style="@style/account_linear_layout_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="@style/account_icon_style"
                        android:layout_weight="0"
                        android:contentDescription="@string/notice_menu_icon"
                        android:src="@drawable/ic_notice" />

                    <TextView
                        style="@style/account_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/notice_menu" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/faqMenu"
                    style="@style/account_linear_layout_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="@style/account_icon_style"
                        android:layout_weight="0"
                        android:contentDescription="@string/faq_menu_icon"
                        android:src="@drawable/ic_faq" />

                    <TextView
                        style="@style/account_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/faq_menu" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/settingMenu"
                    style="@style/account_linear_layout_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="@style/account_icon_style"
                        android:layout_weight="0"
                        android:contentDescription="@string/setting_menu_icon"
                        android:src="@drawable/ic_setting" />

                    <TextView
                        style="@style/account_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/setting_menu" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/logoutMenu"
                    style="@style/account_linear_layout_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="@style/account_icon_style"
                        android:layout_weight="0"
                        android:contentDescription="@string/logout_menu_icon"
                        android:src="@drawable/ic_logout" />

                    <TextView
                        style="@style/account_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/logout_menu" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/withdrawalMenu"
                    style="@style/account_linear_layout_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="@style/account_icon_style"
                        android:layout_weight="0"
                        android:contentDescription="@string/withdrawal_menu_icon"
                        android:src="@drawable/ic_withdrawal" />

                    <TextView
                        style="@style/account_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/withdrawal_menu" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>