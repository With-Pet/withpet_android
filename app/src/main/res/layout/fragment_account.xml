<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragments.AccountFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            style="@style/Widget.MaterialComponents.AppBarLayout.Surface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:liftOnScroll="true">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/accountToolbar"
                style="@style/toolbar_style"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="@string/account_toolbar" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/myProfileMenu"
                    style="@style/linear_layout_button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="@style/account_icon_style"
                        android:layout_weight="0"
                        android:contentDescription="@string/my_profile_menu_icon"
                        android:src="@drawable/ic_person" />

                    <TextView
                        style="@style/default_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/my_profile_menu" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/petProfileMenu"
                    style="@style/linear_layout_button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="@style/account_icon_style"
                        android:layout_weight="0"
                        android:contentDescription="@string/pet_profile_menu_icon"
                        android:src="@drawable/ic_pet_profile" />

                    <TextView
                        style="@style/default_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/pet_profile_menu" />
                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    style="@style/divider_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/likePersonMenu"
                    style="@style/linear_layout_button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="@style/account_icon_style"
                        android:layout_weight="0"
                        android:contentDescription="@string/like_person_menu_icon"
                        android:src="@drawable/ic_star" />

                    <TextView
                        style="@style/default_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/like_post_menu" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/likePetMenu"
                    style="@style/linear_layout_button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="@style/account_icon_style"
                        android:layout_weight="0"
                        android:contentDescription="@string/like_pet_menu_icon"
                        android:src="@drawable/ic_like_border" />

                    <TextView
                        style="@style/default_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/like_person_menu" />
                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    style="@style/divider_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/noticeMenu"
                    style="@style/linear_layout_button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="@style/account_icon_style"
                        android:layout_weight="0"
                        android:contentDescription="@string/notice_menu_icon"
                        android:src="@drawable/ic_notice" />

                    <TextView
                        style="@style/default_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/notice_menu" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/faqMenu"
                    style="@style/linear_layout_button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="@style/account_icon_style"
                        android:layout_weight="0"
                        android:contentDescription="@string/faq_menu_icon"
                        android:src="@drawable/ic_faq" />

                    <TextView
                        style="@style/default_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/faq_menu" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/settingMenu"
                    style="@style/linear_layout_button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="@style/account_icon_style"
                        android:layout_weight="0"
                        android:contentDescription="@string/setting_menu_icon"
                        android:src="@drawable/ic_setting" />

                    <TextView
                        style="@style/default_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/setting_menu" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/logoutMenu"
                    style="@style/linear_layout_button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="@style/account_icon_style"
                        android:layout_weight="0"
                        android:contentDescription="@string/logout_menu_icon"
                        android:src="@drawable/ic_logout" />

                    <TextView
                        style="@style/default_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/logout_menu" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/withdrawalMenu"
                    style="@style/linear_layout_button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="@style/account_icon_style"
                        android:layout_weight="0"
                        android:contentDescription="@string/withdrawal_menu_icon"
                        android:src="@drawable/ic_withdrawal" />

                    <TextView
                        style="@style/default_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/withdrawal_menu" />
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>