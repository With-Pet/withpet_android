<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StepView">
        <item name="lineYetColor">@android:color/darker_gray</item>
        <item name="lineDoneColor" format="color">@color/very_peri</item>

        <item name="circleYetColor" format="color">@android:color/darker_gray</item>
        <item name="circleNowColor" format="color">@color/green_briar</item>
        <item name="circleDoneColor" format="color">@color/very_peri</item>

        <item name="titleYetColor" format="color">@android:color/darker_gray</item>
        <item name="titleNowColor" format="color">@color/green_briar</item>
        <item name="titleDoneColor" format="color">@color/very_peri</item>
        <item name="titleTextSize" format="dimension">11sp</item>

        <item name="stepNumColor" format="color">@color/white</item>
        <item name="stepNumSize" format="dimension">12sp</item>

        <item name="stepPadding" format="dimension">4dp</item>
        <item name="textPadding" format="dimension">12dp</item>

        <item name="circleRadius" format="dimension">14dp</item>
        <item name="lineWidth" format="dimension">2dp</item>
    </style>

    <style name="TextStyle.Headline4.Default" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle.Headline5.Bold" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Headline6.Bold" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Subtitle1.Bold" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Body1.Bold" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Body1.Default" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="TextStyle.Body2.Default" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="TitleVerticalMarginStyle">
        <item name="android:textAppearance">@style/TextStyle.Headline5.Bold</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="SubtitleVerticalMarginStyle">
        <item name="android:textAppearance">@style/TextStyle.Subtitle1.Bold</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="BodyVerticalMarginStyle">
        <item name="android:textAppearance">@style/TextStyle.Body2.Default</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="LabelTextStyle">
        <item name="android:textAppearance">@style/TextStyle.Headline6.Bold</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="ScrollViewStyle">
        <item name="android:clipToPadding">false</item>
        <item name="android:padding">16dp</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

    <style name="HorizontalTopDividerStyle" parent="Widget.MaterialComponents.MaterialDivider">
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="HorizontalDividerStyle" parent="Widget.MaterialComponents.MaterialDivider">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="VerticalDividerStyle" parent="Widget.MaterialComponents.MaterialDivider">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="LinearMenuStyle">
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="AccountIconStyle">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="tint">@color/black</item>
    </style>

    <style name="ButtonStyle.VeryPeri.Fill" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextStyle.Subtitle1.Bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/very_peri</item>
    </style>

    <style name="ButtonStyle.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="strokeColor">@color/text_field_stroke_color</item>
        <item name="android:textColor">@color/text_field_text_color</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="ButtonStyle.OutlinedIconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">28dp</item>
        <item name="android:minWidth">112dp</item>
        <item name="android:minHeight">112dp</item>
        <item name="iconSize">64dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.CircularButton</item>
    </style>

    <style name="ButtonStyle.Transparent" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextStyle.Subtitle1.Bold</item>
    </style>

    <style name="RatingBarStyle" parent="Theme.AppCompat">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="RatingProgressBarStyle">
        <item name="colorAccent">@color/yellow</item>
    </style>

    <style name="SpinnerPickerStyle">
        <item name="android:textColorPrimary">@color/very_peri</item>
        <item name="android:textSize">24sp</item>
        <item name="colorControlNormal">@color/light_gray</item>
    </style>

    <style name="NoOutlinedInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="helperTextEnabled">false</item>
        <item name="errorEnabled">false</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.CircularButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>