<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="toolbar_style" parent="ThemeOverlay.MaterialComponents.Toolbar.Surface">
        <item name="titleTextAppearance">@style/toolbar_bold_title</item>
    </style>

    <style name="toolbar_bold_title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="linear_layout_button_style">
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="account_icon_style">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="tint">@color/black</item>
    </style>

    <style name="default_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="singleLine">true</item>
    </style>

    <style name="bold_text_style" parent="default_text_style">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="profile_margin_style" parent="bold_text_style">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="small_text_style">
        <item name="android:textSize">14sp</item>
        <item name="singleLine">true</item>
    </style>

    <style name="left_drawable_button_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="divider_style" parent="Widget.MaterialComponents.MaterialDivider">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="dividerInsetStart">8dp</item>
        <item name="dividerInsetEnd">8dp</item>
    </style>

    <style name="single_button_style" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">240dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:backgroundTint">@color/very_peri</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="outlined_button_style" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
        <item name="strokeColor">@color/text_field_stroke_color</item>
        <item name="android:textColor">@color/text_field_text_color</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>